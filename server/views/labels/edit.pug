extends ../layouts/application.pug

block content
	.row.justify-content-start
		.form-control.shadow-sm.bg-light.bg-gradient.rounded-3.w-50
			h1.h3.my-3.fw-bold= t('views.labels.update.title')
			+formFor()(action=route('labels#update', { id: label.id }) method='post')
				+input(label, 'name', t('views.placeholders.name'),  errors)(type='text')
				input(name="_method" type="hidden" value='patch')
				+submitSm(label)(value=t('views.labels.update.submit'))